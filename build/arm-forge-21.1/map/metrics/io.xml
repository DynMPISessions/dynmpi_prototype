            <type>io</type>
            <colour>SpecialLine8</colour>
            <autoDisplayFactor>true</autoDisplayFactor>
            <rel type="integral" name="rchar_total"/>
        </display>
    </metric>

    <metric id="wchar_rate">
        <enabled>default_yes</enabled>
        <units>B/s</units>
        <dataType>uint64_t</dataType>
