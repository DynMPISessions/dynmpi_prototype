    <metricGroup id="DiskIO">
        <displayName>IO</displayName>
        <description>IO operations</description>
        <metric ref="rchar_rate"/>
        <metric ref="wchar_rate"/>
        <metric ref="bytes_read"/>
        <metric ref="bytes_written"/>
