        <display>
            <description>The number of write system calls per second.</description>
            <displayName>POSIX write syscall rate</displayName>
            <type>io</type>
            <colour>SpecialLine8</colour>
            <autoDisplayFactor>true</autoDisplayFactor>
            <rel type="integral" name="syscw_total"/>
